<div class="row">
  <div class="col s12 m8">
    <h3><%=idea.title%></h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title"
          ><%=moment(idea.createdat).format("MMMM Do YYYY, h:mm:ss a")%></span
        >
        <%=idea.details%>
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title"><%=idea.user.displayname%></span>
        <img
          src="<%=idea.user.image%>"
          class="circle responsive-img img-small"
        />
      </div>
      <div class="card-action">
        <a href="/dashboard">More From <%=idea.user.firstname%></a>
      </div>
    </div>
  </div>
</div>
